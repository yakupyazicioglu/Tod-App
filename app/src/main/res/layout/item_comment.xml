<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/comment_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_action_account_circle_40"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:padding="5dp"
            android:layout_toRightOf="@+id/comment_photo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comment_author"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Mirrket" />

                <TextView
                    android:id="@+id/comment_date"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginLeft="16dp"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="26/01/17"/>


            </LinearLayout>

            <TextView
                android:id="@+id/comment_body"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="This is the comment text.."/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/like_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thumb_up"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="12dp"
                    android:background="?attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/comment_num_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    tools:text="7" />

                <ImageButton
                    android:id="@+id/dislike_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thumb_down"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="48dp"
                    android:background="?attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/comment_num_dislikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="12sp"
                    tools:text="7" />


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>