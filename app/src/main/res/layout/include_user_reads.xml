<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="32dp"
            android:layout_alignParentLeft="true"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_no_image" />


        <LinearLayout
            android:id="@+id/area_book"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/photo_iv"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxWidth="180dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="My First Post" />

            <TextView
                android:id="@+id/author_name"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxWidth="180dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                tools:text="Author Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/area_book"
            android:orientation="vertical">

            <TextView
                android:id="@+id/field_publisher"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                tools:text="Publisher" />

            <TextView
                android:id="@+id/field_page"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                tools:text="Page" />

        </LinearLayout>

    <ImageButton
        android:id="@+id/btn_read_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center"
        android:src="@drawable/ic_overflow"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>